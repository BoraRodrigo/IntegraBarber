<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="navigationViewStyle">@style/Widget.Design.NavigationView</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TemaEditText">
        <item name="colorControlNormal">#ff0000</item>
        <item name="colorControlActivated">#023af2</item>
        <item name="colorControlHighlight">@color/accent_material_light</item>
    </style>

    <style name="TelaInicial" parent="AppTheme" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
